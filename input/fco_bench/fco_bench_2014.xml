<?xml version="1.0"?>
<!-- An FCO 'recycling' benchmark for 2014.
     Specifications are heavily detailed in a memo called 
     'Fuel Cycle Transition Scenario Modeling Specifications'
     Fuel Cycle Options Campaign
     Deployment and Implementation Issue
     January 7, 2014

     A detailed spec. for this input file is present in fco_bench_2014.rst
-->
<simulation>
  <control>
    <duration>1200</duration>
    <startmonth>1</startmonth>
    <startyear>2014</startyear>
    <simstart>0</simstart>
    <decay>2</decay> <!-- decay is off -->
  </control>

  <commodity>
    <name>nat_u</name>
  </commodity>
  <commodity>
    <name>leu</name>
  </commodity>
  <commodity>
    <name>fresh_lwr_fuel</name>
  </commodity>
  <commodity>
    <name>fresh_sfr_fuel</name>
  </commodity>
  <commodity>
    <name>lwr_unf</name>
  </commodity>
  <commodity>
    <name>sfr_unf</name>
  </commodity>
  <commodity>
    <name>lwr_unf_cool</name>
  </commodity>
  <commodity>
    <name>sfr_unf_cool</name>
  </commodity>
  <commodity>
    <name>rep_lwr_u</name>
  </commodity>
  <commodity>
    <name>rep_lwr_tru</name>
  </commodity>
  <commodity>
    <name>rep_sfr_u</name>
  </commodity>
  <commodity>
    <name>rep_sfr_tru</name>
  </commodity>

  <facility>
    <name>Mine</name>
    <model>
      <SourceFacility>
        <output>
          <outcommodity>nat_u</outcommodity>
          <output_capacity>200000</output_capacity>
          <recipe>nat_u_recipe</recipe>
        </output>
      </SourceFacility>
    </model>
    <outcommodity>nat_u</outcommodity>
  </facility>

  <facility>
    <name>Enrichment</name>
    <model>
      <EnrichmentFacility>
        <input>
          <incommodity>nat_u</incommodity>
          <inrecipe>nat_u_recipe</inrecipe>
        </input>
        <output>
          <outcommodity>leu</outcommodity>
          <tails_assay>0.0025</tails_assay>
        </output>
      </EnrichmentFacility>
    </model>
    <incommodity>nat_u</incommodity>
    <outcommodity>leu</outcommodity>
  </facility> 

  <facility>
    <name>LWRFuelFab</name>
    <model>
      <CommodConverter>
        <commod_pair>
          <incommodity>leu</incommodity>
          <inrecipe>leu_recipe</inrecipe>
          <outcommodity>fresh_lwr_fuel</outcommodity>
          <outrecipe>fresh_lwr_fuel_recipe</outrecipe>
        </commod_pair>
        <processtime>12</processtime> 
        <capacity>100.0</capacity> 
        <commodity_production>
          <commodity>fresh_lwr_fuel</commodity>
          <capacity>10000.0</capacity>
          <cost>10000.0</cost>
        </commodity_production>
      </CommodConverter>
    </model>
    <incommodity>leu</incommodity>
    <outcommodity>fresh_lwr_fuel</outcommodity>
  </facility>

  <facility>
    <name>SFRFuelFab</name>
    <model>
      <FCOFuelFab>
        <inpair>
          <incommodity>rep_sfr_tru</incommodity>
          <inrecipe>rep_sfr_tru_recipe</inrecipe>
        </inpair>
        <inpair>
          <incommodity>rep_lwr_tru</incommodity>
          <inrecipe>rep_lwr_tru_recipe</inrecipe>
        </inpair>
        <inpair>
          <incommodity>rep_sfr_u</incommodity>
          <inrecipe>rep_sfr_u_recipe</inrecipe>
        </inpair>
        <inpair>
          <incommodity>nat_u</incommodity>
          <inrecipe>nat_u_recipe</inrecipe>
        </inpair>
        <inpair>
          <incommodity>dep_u</incommodity>
          <inrecipe>dep_u_recipe</inrecipe>
        </inpair>
        <outpair>
          <outcommodity>fresh_sfr_fuel</outcommodity>
          <outrecipe>fresh_sfr_fuel_recipe</outrecipe>
        </outpair>
        <preflist>
          <prefiso>95241</prefiso>
          <sourcecommod>rep_sfr_tru</sourcecommod>
          <sourcecommod>rep_lwr_tru</sourcecommod>
        </preflist>
        <preflist>
          <prefiso>94239</prefiso>
          <sourcecommod>rep_sfr_tru</sourcecommod>
          <sourcecommod>rep_lwr_tru</sourcecommod>
        </preflist>
        <preflist>
          <prefiso>92235</prefiso>
          <sourcecommod>rep_sfr_u</sourcecommod>
          <sourcecommod>dep_u</sourcecommod>
          <sourcecommod>nat_u</sourcecommod>
        </preflist>
        <processtime>12</processtime>
        <capacity>100.0</capacity> 
        <commodity_production>
          <commodity>fresh_sfr_fuel</commodity>
          <capacity>10000.0</capacity>
          <cost>10000.0</cost>
        </commodity_production>
      </FCOFuelFab>
    </model>
    <incommodity>rep_sfr_tru</incommodity>
    <incommodity>rep_lwr_tru</incommodity>
    <incommodity>rep_sfr_u</incommodity>
    <incommodity>nat_u</incommodity>
    <incommodity>dep_u</incommodity>
    <outcommodity>fresh_sfr_fuel</outcommodity>
  </facility>

  <facility>
    <name>LWR</name>
    <lifetime>60</lifetime>
    <model>
      <BatchReactor>
        <fuel>
         <incommodity>fresh_lwr_fuel</incommodity>
         <inrecipe>fresh_lwr_fuel_recipe</inrecipe>
         <outcommodity>lwr_unf</outcommodity>
         <outrecipe>lwr_unf_recipe</outrecipe>
        </fuel>
        <processtime>12</processtime>
        <nbatches>3</nbatches>
        <batchsize>19.91</batchsize>
        <commodity_production>
          <commodity>power</commodity>
          <capacity>90</capacity>
          <cost>90</cost>
        </commodity_production>
      </BatchReactor>
    </model>
    <incommodity>fresh_lwr_fuel</incommodity>
    <outcommodity>lwr_unf</outcommodity>
  </facility>

  <facility>
    <name>SFR</name>
    <lifetime>60</lifetime>
    <model>
      <BatchReactor>
        <fuel>
         <incommodity>fresh_sfr_fuel</incommodity>
         <inrecipe>fresh_sfr_fuel_recipe</inrecipe>
         <outcommodity>sfr_unf</outcommodity>
         <outrecipe>sfr_unf_recipe</outrecipe>
        </fuel>
        <processtime>12</processtime>
        <nbatches>4</nbatches> <!-- In cyclus, this must be an integer -->
        <batchsize>3.25875</batchsize> <!-- 3.95*(3.3/4) -->
        <commodity_production>
          <commodity>power</commodity>
          <capacity>30</capacity>
          <cost>30</cost>
        </commodity_production>
      </BatchReactor>
    </model>
    <incommodity>fresh_sfr_fuel</incommodity>
    <outcommodity>sfr_unf</outcommodity>
  </facility>

  <facility>
    <name>LWRWetStorage</name>
    <model>
      <CommodConverter>
        <commod_pair>
          <incommodity>lwr_unf</incommodity>
          <inrecipe>lwr_unf_recipe</inrecipe>
          <outcommodity>lwr_unf_cool</outcommodity>
          <outrecipe>lwr_unf_recipe</outrecipe>
        </commod_pair>
        <processtime>48</processtime>
        <commodity_production>
          <commodity>lwr_unf_recipe</commodity>
          <capacity>1000.0</capacity>
          <cost>0.0</cost>
        </commodity_production>
      </CommodConverter>
    </model>
    <incommodity>lwr_unf</incommodity>
    <outcommodity>lwr_unf_fuel</outcommodity>
  </facility>

  <facility>
    <name>SFRWetStorage</name>
    <model>
      <CommodConverter>
        <commod_pair>
          <incommodity>sfr_unf</incommodity>
          <inrecipe>sfr_unf_recipe</inrecipe>
          <outcommodity>sfr_unf_cool</outcommodity>
          <outrecipe>sfr_unf_recipe</outrecipe>
        </commod_pair>
        <processtime>12</processtime>
        <commodity_production>
          <commodity>sfr_unf_cool</commodity>
          <capacity>1000.0</capacity>
          <cost>0.0</cost>
        </commodity_production>
      </CommodConverter>
    </model>
    <incommodity>sfr_unf</incommodity>
    <outcommodity>sfr_unf_fuel</outcommodity>
  </facility>

  <facility>
    <name>LWRSeparations</name>
    <model>
      <SeparationsFac>
        <inpair>
          <incommodity>lwr_unf_cool</incommodity>
          <inrecipe>lwr_unf_recipe</inrecipe>
        </inpair>
        <outpair>
          <outcommodity>rep_lwr_tru</outcommodity>
          <z>94</z>
        </outpair>
        <outpair>
          <outcommodity>rep_lwr_u</outcommodity>
          <z>92</z>
        </outpair>
        <processtime>0</processtime>
        <capacity>2000000</capacity>
        <commodity_production>
          <commodity>rep_lwr_u</commodity>
          <capacity>1000.0</capacity>
          <cost>0.0</cost>
        </commodity_production>
      </SeparationsFac>
    </model>
    <incommodity>lwr_unf</incommodity>
    <outcommodity>lwr_unf_fuel</outcommodity>
  </facility>

  <facility>
    <name>SFRSeparations</name>
    <model>
      <SeparationsFac>
        <inpair>
          <incommodity>sfr_unf_cool</incommodity>
          <inrecipe>sfr_unf_recipe</inrecipe>
        </inpair>
        <outpair>
          <outcommodity>rep_sfr_tru</outcommodity>
          <z>94</z>
        </outpair>
        <outpair>
          <outcommodity>rep_sfr_u</outcommodity>
          <z>92</z>
        </outpair>
        <processtime>0</processtime>
        <capacity>2000000</capacity>
        <commodity_production>
          <commodity>rep_sfr_u</commodity>
          <capacity>1000.0</capacity>
          <cost>0.0</cost>
        </commodity_production>
      </SeparationsFac>
    </model>
    <incommodity>sfr_unf</incommodity>
    <outcommodity>sfr_unf_fuel</outcommodity>
  </facility>

  <region>
    <name>SingleRegion</name>
    <allowedfacility>Mine</allowedfacility>
    <allowedfacility>Enrichment</allowedfacility>
    <allowedfacility>LWRFuelFab</allowedfacility>
    <allowedfacility>SFRFuelFab</allowedfacility>
    <allowedfacility>LWR</allowedfacility>
    <allowedfacility>SFR</allowedfacility>
    <allowedfacility>LWRWetStorage</allowedfacility>
    <allowedfacility>SFRWetStorage</allowedfacility>
    <allowedfacility>LWRSeparations</allowedfacility>
    <allowedfacility>LWRSeparations</allowedfacility>
    <model>
      <GrowthRegion>
        <commodity>
          <name>power</name>
          <demand>
            <type>linear</type>
            <parameters>0 1</parameters>
          </demand>
        </commodity>
      </GrowthRegion>
    </model>
    <institution>
      <name>SingleInstitution</name>
      <availableprototype>Mine</availableprototype>
      <availableprototype>Enrichment</availableprototype>
      <availableprototype>LWRFuelFab</availableprototype>
      <availableprototype>SFRFuelFab</availableprototype>
      <availableprototype>LWR</availableprototype>
      <availableprototype>SFR</availableprototype>
      <availableprototype>LWRWetStorage</availableprototype>
      <availableprototype>SFRWetStorage</availableprototype>
      <availableprototype>LWRSeparations</availableprototype>
      <availableprototype>SFRSeparations</availableprototype>
      <initialfacilitylist>
        <entry>
          <prototype>Mine</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Enrichment</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>LWRFuelFab</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>SFRFuelFab</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>LWRWetStorage</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>SFRWetStorage</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>LWRSeparations</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>SFRSeparations</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Enrichment</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>LWR</prototype>
          <number>100</number>
        </entry>
      </initialfacilitylist>
      <model>
        <ManagerInst/>
      </model>
    </institution>
  </region>

